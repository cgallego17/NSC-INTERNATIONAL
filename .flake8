[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    staticfiles,
    media,
    migrations,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    .mypy_cache,
    .DS_Store
ignore = 
    E203,
    E501,
    W503,
    E402
per-file-ignores =
    __init__.py:F401
    migrations/*:E501
    settings.py:E501
    manage.py:E501
